@model Wheather.Models.IndexModel
@{
    ViewBag.Title = "Index";
}

<html>
<head>
    <title>Weather</title>
    <link rel="stylesheet" type="text/css" href="~/Content/Site.css" />
</head>
<body>
    <div class="body">
        <div id="header">
            <div class="logoName">
                <img src="http://appvisor.ru/uploads/ios/2/12792/pogoda-live.png" alt="Weather logo" />
                <h1>Smile</h1>
                <div class="box shadow">
                    <p>Whatever the weather is, the more important that you have in your heart...</p>
                </div>
                   @Html.ActionLink("History", "History")
            </div>

            <div class="cities-managment">
                <div class="add-city">
                    <input type="text" id="add-city" placeholder="write city"/>
                    <input type="button" id="add-city-btn" value="Add City" />
                </div>
                <div class="delete-city">
                    <input type="text" id="delete-city" placeholder="write city"/>
                    <input type="button" id="delete-city-btn" value="Delete City" />
                </div>
                <div class="update-cities">
                    <input type="text" id="update-cities" placeholder="cities(through a comma)"/>
                    <input type="button" id="update-cities-btn" value="Update Cities" />
                </div>
            </div>
        </div>



        <div id="content">
            <div class="main-content">
                <div class="select">
                    <p>Select a city:</p>
                    <select name="citySelect">
                        <option placeholder="-select city-" value="">-select city-</option>
                        @foreach (var city in Model.Cities)
                        {
                            <option value="@city">@city</option>
                        }
                    </select><br/>
                </div>

                <div class="text">
                    <p>Or write another:</p>
                    <input id="cityText" type="text" name="city" placeholder="City"/>
                </div>

                <div class="radio">
                    <p>Choose how much perid you want to see the weather</p>
                    <form>

                        <input type="radio" name="radio" value="1" checked>now <br>
                        <input type="radio" name="radio" value="3"> the next three days<br>
                        <input type="radio" name="radio" value="7"> the next seven days

                    </form>
                </div>

                <div class="btn-container">
                    <input id="but" type="submit" value="Find out the weather"/>
                </div>
            </div>

            <div id="infa"></div>
        </div>


        <div id="footer">
            <div class="infaAbout">
                <h4>Some information</h4>
                <p>Our company is very concerned about you and wants you to be always confident in the weather. Have not forgotten to take an umbrella or sunglasses. Therefore, we offer you to find out the exact weather, even a few days ahead. Enjoy your vacation or walks in spite of the weather. </p>
            </div>
            <div class="contact">
                <p>You can contact us using:<br /><br />
                333-874-256<br />
                <a class="fb"> weatherForYou@gmail.com</a><br />
                c. Lviv, str. Zelena\278</p>
            </div>

        </div>
        

    </div>
</body>
</html>


<script src="~/Scripts/JavaScript.js">
</script>

