@model Wheather.Models.Now.Now
@{
    var icon = $"http://openweathermap.org/img/w/{@Model.Weather[0].Icon}.png";
    var date = new DateTime(1970, 1, 1, 0, 0, 0).AddSeconds(Model.Dt).Date;
}

<div class="weather">
    <h2>@Model.Name</h2>
    <h2>@date.ToString("D")</h2>
    <h5>Temperature: @Model.Main.Temp C</h5>
    <img src="@icon">
</div>