                        <TextBlock x:ConnectionId='16'                      FontSize="12" Grid.ColumnSpan="4" Grid.Column="0" Grid.Row="0"></TextBlock>
                        <TextBlock x:ConnectionId='17'                     Grid.Column="1" Grid.Row="1"></TextBlock>
                        <TextBlock Text="-" Grid.Column="2" Grid.Row="1"></TextBlock>
                        <TextBlock x:ConnectionId='18'                     Grid.Column="3" Grid.Row="1" Margin="0,0,40,0"></TextBlock>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button x:ConnectionId='9' Content="Get History" Name="GetHistory" HorizontalAlignment="Left" Margin="640,13,0,0" VerticalAlignment="Top"/>
        <ListView x:ConnectionId='10' HorizontalAlignment="Left" Height="635" Margin="495,45,0,0" VerticalAlignment="Top" Width="389"                               >
            <ListView.ItemTemplate>
                <DataTemplate                                >
                    <Grid x:ConnectionId='11' Margin="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="24"></RowDefinition>
                            <RowDefinition Height="24"></RowDefinition>
                        </Grid.RowDefinitions>

                        <TextBlock x:ConnectionId='12'                             FontSize="12" Grid.Column="0" Grid.Row="0"></TextBlock>
                        <TextBlock x:ConnectionId='13'                          Grid.Column="0" Grid.Row="1"></TextBlock>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
            <WebView HorizontalAlignment="Left" Height="200" Margin="10,10,0,0" VerticalAlignment="Top" Width="485"/>
